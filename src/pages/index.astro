---
import ParticleInit from "../components/atoms/ParticleInit";
import CircleImages from "../components/atoms/CircleImages";
import HomeLinks from "../components/molecules/HomeLinks";
import MainLayout from "../layouts/MainLayout.astro";
const styles = "font-chrono text-2xl tablet:text-3xl laptop:text-4xl p-2";
---

<MainLayout title="Caracolaracol || Portfolio">
  <div
    class="home__transition mb-12 flex flex-col items-center justify-center self-center"
  >
    <header class="mb-4 flex h-[237px] w-64 justify-center">
      <CircleImages client:load />
    </header>
    <main
      class="z-50 flex flex-col flex-nowrap justify-evenly px-2 text-center"
    >
      <h1
        class="font-tommyMedium tablet:tracking-wide tablet:text-5xl laptop:text-6xl desktop:text-7xl laptop:tracking-normal cursor-default overflow-hidden text-[2.4rem]"
      >
        Caracolaracol{" "}
        <span
          class="text-ocre tablet:text-4xl laptop:text-6xl desktop:text-7xl font-tommyBold text-4xl"
          >{`//`}</span
        >{" "}
        Creative Developer
      </h1>
      <p
        class="font-tommyMedium tablet:text-lg desktop:text-xl tablet:pt-2 tablet:tracking-wider dark:text-lavenderblush text-sm"
      >
        <span
          class="text-cerise tablet:text-lg desktop:text-xl tablet:tracking-wide font-tommyMedium"
        >
          #{" "}
        </span>
        Hi there! I'm Agustín Rojas, I'm a web developer and artist.
      </p>
      <h2 class={`${styles} pt-2`}>Welcome to my site!</h2>
    </main>

    <nav class="tablet:py-3 z-50 flex justify-center py-2">
      <a href="portfolio">
        <button 
          class="font-tommyMedium bg-violet text-platinum hover:text-cerise dark:bg-violet dark:hover:text-cerise dark:text-blancon tablet:py-0 tablet:h-14 tablet:px-4 desktop:px-7 desktop:py-8 tablet:text-4xl desktop:text-4xl tablet:tracking-wider tablet:min-w-[20rem] laptop:min-w-[22rem] group flex h-10 w-fit min-w-[14.5rem] items-center justify-center gap-2 rounded-lg px-6 py-6 text-2xl transition-colors"
        >
          <p
            class="text-cerise text-4xl group-hover:text-snow transition-colors"
          >
            {"{ "}
          </p>
          My Portfolio
          <p
            class="text-cerise text-4xl group-hover:text-snow transition-colors"
          >
            {" }"}
          </p>
        </button >
      </a>
    </nav>
    <footer
      class="dark:text-platinum z-50 mb-8 flex flex-col justify-between text-center h-10"
    >
      <HomeLinks transition:name="links" client:load>
        <div class={`flex justify-center gap-3`}></div>
      </HomeLinks>
      <ParticleInit client:only="react" />
    </footer>
  </div>
</MainLayout>
