---
import MainLayout from '@/layouts/MainLayout.astro';

const posts = [
    {
        title: "Primer Post",
        date: "2023-10-01",
        excerpt: "Este es el primer post de mi blog.",
        link: "/blog/primer-post"
    },
    {
        title: "Segundo Post",
        date: "2023-10-02",
        excerpt: "Este es el segundo post de mi blog.",
        link: "/blog/segundo-post"
    }
];
---

<MainLayout title='blog'>
    <h1>Blog</h1>
    <ul>
        {posts.map(post => (
            <li>
                <h2><a href={post.link}>{post.title}</a></h2>
                <p>{post.date}</p>
                <p>{post.excerpt}</p>
            </li>
        ))}
    </ul>
</MainLayout>